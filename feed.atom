---
layout: none
permalink: /feed.atom
sitemap: false
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.name | xml_escape }}</title>
    <subtitle>{{ site.ndescription | xml_escape }}</subtitle>
    <description>{{ site.description | xml_escape }}</description>
    <link>https://michaelnordmeyer.com/</link>
    <atom:link href="https://michaelnordmeyer.com/feed.atom" rel="self" type="application/rss+xml" />{% for post in site.posts limit: 20 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <summary>{{ post.excerpt | xml_escape }}</summary>
        <link>https://michaelnordmeyer.com/{{ post.url }}</link>
        <guid isPermaLink="true">https://michaelnordmeyer.com/{{ post.url }}</guid>
        <description>{{ post.content | xml_escape }}</description>
      </item>{% endfor %}
  </channel>
</rss>